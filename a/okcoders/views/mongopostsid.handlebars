<div class="row">
    <h4 class="btn btn-danger">mongopostsid.handlebars</h4>
</div>


<div class="row">
    <div class="col-xs-6">
        <div class="panel panel-default">

            <div class="panel-heading">
                <h4> Title: {{result.title}} </h4>
                <p> Author: {{result.author}} </p>
            </div>

            <div class="panel-body">
                <p> Body: {{result.body}} </p>
                <p> _id: {{reqid}} </p>
                <p> id: {{result.id}} </p>
                <p>
                    <a href="http://opsvm3.turner.com:3000/mongoposts">Go Back</a>
                </p>

                <p>
                    <a href="http://opsvm3.turner.com:3000/mongopost/{{reqid}}/edit">Edit</a>
                </p>

                <p>

                    <form method="POST" action="http://opsvm3.turner.com:3000/mongodelete/{{reqid}}"
                          enctype="application/x-www-form-urlencoded">

                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit">Delete this post</button>

                    </form>

                </p>
            </div>

        </div>
    </div>
</div>